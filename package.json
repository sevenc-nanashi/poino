{
  "name": "poino",
  "version": "1.3.0",
  "description": "Speech synthesis software without voice actors",
  "author": "KoharuYuzuki",
  "main": "./dist-electron/main.js",
  "scripts": {
    "start": "npx electron .",
    "dev": "vite",
    "build": "run-s build:vite build:icon build:electron",
    "build:vite": "vite build",
    "build:electron": "electron-builder",
    "build:icon": "node ./scripts/buildIcon.js",
    "lint": "eslint renderer electron --ext .ts,.vue",
    "lint:fix": "eslint renderer electron --ext .ts,.vue --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "electron": "^21.3.1",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "typescript": "^4.9.5"
  },
  "build": {
    "appId": "KoharuYuzuki25.poino",
    "productName": "poino",
    "copyright": "Copyright (c) 2022 KoharuYuzuki25",
    "asar": true,
    "files": [
      "./openjtalk/hts_voice_nitech_jp_atr503_m001-1.05/*",
      "./openjtalk/open_jtalk_dic_utf_8-1.11/*",
      "./dist/*",
      "./voices/*",
      "./licenses.json"
    ],
    "mac": {
      "icon": "./dist/icon.icns",
      "artifactName": "${productName}-${os}-${arch}.zip",
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "electronLanguages": [
        "ja"
      ]
    },
    "win": {
      "icon": "./dist/icon.ico",
      "artifactName": "${productName}-${os}-${arch}.zip",
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "esbuild": "^0.17.5",
    "sass": "^1.58.0",
    "vite": "^4.0.4",
    "vite-electron-plugin": "^0.7.4",
    "vue": "^3.2.47",
    "vue-tsc": "^1.0.24"
  }
}
